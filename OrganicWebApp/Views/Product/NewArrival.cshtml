@using Org_DAL.Models
@model ICollection<Product>
@{
    ViewData["Title"] = "NewArrival";
}

<h3 class="text-center">Sản phẩm <span class="text-success opacity-75">mới</span></h3>

<div>
    <div class="row mt-5">


        @foreach(var item in Model)
        {
            <div class="col-lg-3 col-md-4 col-6">
                <div class="border d-flex rounded flex-column m-2" style="min-width:245px;max-width:245px; min-height:387.63px;max-height:387.63px">
                    <div class="border-bottom d-flex justify-content-center" style="min-height:212.63px">
                        <img src="@item.ImageUrl" width="100%" />
                    </div>
                    <div class="d-flex flex-column p-3">
                        <div class="mt-2 mb-2">
                            <span class="fs-6 text-secondary">Bánh quy</span>
                        </div>
                        <div class="fw-semibold fs-5 mb-2">
                            <a class="text-decoration-none text-dark" asp-action="Detail_C" asp-controller="Product" asp-route-id="@item.Id">@item.ProductName</a>
                        </div>
                        <div class="d-flex mb-2 justify-content-between">
                            <div>
                                Dạng:    <span class="badge bg-success"> @item.TypeClosure</span>
                            </div>
                            <div>
                                KL: @item.Weight g
                            </div>

                        </div>
                        <div class="d-flex">
                            <div class="fw-bold text-dark me-5">
                                @item.Priced đ
                            </div>
                            <div class="text-secondary text-decoration-line-through">
                                @item.ListedPriced đ
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

      



    </div>
</div>