@using Org_DAL.Models
@model Product
@{
    ViewData["Title"] = "Cập nhật sản phẩm";
}

<h3 class="text-center">Cập nhật sản phẩm</h3>

<div class="container">

    <div>



      
     




    </div>
    <form method="post">
      
        <div class="mt-3 mb-3">
          
            <div class="row">
                <div class="col-8">
                    <span>
                        <label asp-for="ProductName"></label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </span>
                </div>
                <div class="col-4">
                    <span>
                        <label asp-for="ProductDescription"></label>
                        <input asp-for="ProductDescription" class="form-control" />
                        <span asp-validation-for="ProductDescription" class="text-danger"></span>
                    </span>
                </div>
               
            </div>

            <div class="mt-5">
               <div class="row">
                   <div class="col-4">
                        <span>
                            <label asp-for="Weight"></label>
                            <input asp-for="Weight" class="form-control" />
                            <span asp-validation-for="Weight" class="text-danger"></span>
                        </span>
                   </div>
                    <div class="col-4">
                        <span>
                            <label asp-for="TypeClosure"></label>
                            <input asp-for="TypeClosure" class="form-control" />
                            <span asp-validation-for="TypeClosure" class="text-danger"></span>
                        </span>
                    </div>
                    <div class="col-4">
                        <span>
                            <label asp-for="Quantity"></label>
                            <input asp-for="Quantity" class="form-control" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </span>
                    </div>
               </div>



                <div class="row mt-5">
                    <div class="col-4">
                        <span>
                            <label asp-for="ListedPriced"></label>
                            <input asp-for="ListedPriced" class="form-control" />
                            <span asp-validation-for="ListedPriced" class="text-danger"></span>
                        </span>
                    </div>
                    <div class="col-4">
                        <span>
                            <label asp-for="Priced"></label>
                            <input asp-for="Priced" class="form-control" />
                            <span asp-validation-for="Priced" class="text-danger"></span>
                        </span>
                    </div>
                    <div class="col-4">
                        <span>
                            <label asp-for="SaleId"></label>
                            <input asp-for="SaleId" type="text" class="form-control" />
                            <span asp-validation-for="SaleId" class="text-danger"></span>
                        </span>
                    </div>
                </div>


                <div class="row mt-5">
                    <div class="col-4">
                        <span>
                            <label asp-for="MFG"></label>
                            <input asp-for="MFG" type="date" class="form-control" />
                            <span asp-validation-for="MFG" class="text-danger"></span>
                        </span>
                    </div>
                    <div class="col-4">
                        <span>
                            <label asp-for="EXP"></label>
                            <input asp-for="EXP" type="date" class="form-control" />
                            <span asp-validation-for="EXP" class="text-danger"></span>
                        </span>
                    </div>
                    <div class="col-4">
                        <span>
                            <label asp-for="Status"></label>
                           <select asp-for="Status" class="form-control">
                                <option value="0">Hết hàng</option>
                                <option value="1" selected>Đang bán</option>
                                <option value="2">Ngừng kinh doanh</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </span>
                    </div>
                </div>

                <div class="row mt-5">
                    <div class="col-4">
                        <span>
                            <label asp-for="ImageUrl"></label>
                            <input type="file" asp-for="ImageUrl" class="form-control" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </span>
                    </div>
                    <div class="col-4">
                        <span>
                            <label asp-for="CategoryId"></label>
                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryList">
                                <option value="">--Chọn Loại--</option>
                              
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </span>
                    </div>

                </div>


            </div>

        </div>
        <div class="d-flex justify-content-center mt-5">
            <a class="btn btn-secondary me-2" asp-controller="Product" asp-action="Index">
                Quay lại danh sách
            </a>
            <button class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#exampleModal" type="button">
                Lưu thay đổi
            </button>
        </div>
        <div>
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Xác nhận cập nhật?</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Huỷ</button>
                            <button class="btn btn-success" type="submit">Xác nhận</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
  
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />

    }
}