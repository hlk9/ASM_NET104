@using Org_DAL.Models
@model List<Invoice>

<h3 class="text-center">Quản lý sản phẩm</h3>

<div class="container">
    <div class="d-flex justify-content-end mt-3 mb-3">
        <a class="btn btn-outline-primary" asp-controller="Product" asp-action="Create">
            Hoá đơn của tôi
        </a>
    </div>

    @if (Model != null)
    {
        <div>
            <table class="table w-100 text-center table-striped align-baseline">
                <thead>
                    <tr>

                        <th>
                            Mã hoá đơn
                        </th>
                        <th>
                            Giá trị
                        </th>
                        <th>
                            Ngày tạo
                        </th>
                        <th>
                            Mã giảm giá
                        </th>
                        <th>
                            Thao tác
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Id
                            </td>
                            <td>
                                @item.TotalAmount
                            </td>
                            <td>
                                @item.CreateAt
                            </td>
                            <td>
                                @(item.CouponId != -1 ? item.CouponId.ToString() : "Không")
                            </td>
                            <td>
                                <a asp-action="Detail" asp-controller="Invoice" asp-route-id="@item.Id" class="btn btn-success">Chi tiết</a>
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
        </div>
    }
    else
    {
        <div>
            Bạn không có hoá đơn nào
        </div>
    }



</div>