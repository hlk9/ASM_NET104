@using OrganicWebApp.ViewModel
@model List<ProductInCart>

<h3 class="text-center">Chi tiết hoá đơn</h3>

<div class="container">
    <div class="d-flex justify-content-end mt-3 mb-3">
       
    </div>

    @if (Model != null)
    {
        <div>
            <table class="table w-100 text-center  align-baseline">
                <thead>
                    <tr>

                        <th>
                            Tên sản phẩm
                        </th>
                        <th style="max-width:50px">
                            Hình ảnh
                        </th>
                        <th>
                           Số lượng
                        </th>
                        <th>
                            Đơn giá
                        </th>
                        <th>
                            Thành tiền
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.ProductName
                            </td>
                            <td style="max-width:50px">
                                <img src="  @item.ImageUrl" width="100%" />
                            </td>
                            <td>
                                @item.Quantity
                            </td>
                            <td>
                               @item.Priced
                            </td>
                            <td>
                                @item.Total
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
        </div>
    }
   



</div>